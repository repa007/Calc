<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="363dp"
        android:layout_height="313dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865">

        <Button
            android:id="@+id/multiply"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="BMultiply"
            android:text="x"
            app:backgroundTint="#00BCD4"
            app:layout_column="4"
            app:layout_row="3" />

        <Button
            android:id="@+id/Division"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="BDivision"
            android:text="/"
            app:backgroundTint="#00BCD4"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:id="@+id/plus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="BPlus"
            android:text="+"
            app:backgroundTint="#00BCD4"
            app:layout_column="4"
            app:layout_row="1" />

        <Button
            android:id="@+id/minus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="BMinus"
            android:text="-"
            app:backgroundTint="#00BCD4"
            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BOne"
            android:text="1"
            app:layout_column="0"
            app:layout_row="0" />


        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BFour"
            android:text="4"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BTwo"
            android:text="2"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BThree"
            android:text="3"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BSix"
            android:text="6"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BSeven"
            android:text="7"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BNine"
            android:text="9"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BEight"
            android:text="8"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BZero"
            android:text="0"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="BSQ"
            android:text="âˆš"
            app:backgroundTint="#00BCD4"
            app:layout_column="4"
            app:layout_row="4" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BFive"
            android:text="5"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="BDel"
            android:text="del"
            app:backgroundTint="#FF4141"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/equality"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="Bequality"
            android:text="="
            app:backgroundTint="#4CAF50"
            app:layout_column="4"
            app:layout_row="5" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="361dp"
        android:layout_height="116dp"
        android:layout_marginTop="196dp"
        android:fontFamily="sans-serif-condensed"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FF5722"
        android:textColorHighlight="#FF5722"
        android:textColorHint="#FF5722"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:drawableTint="#FB0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>